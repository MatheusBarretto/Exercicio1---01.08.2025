<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercicio1___01._08._2025.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="calculadora.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Digite o valor 1"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Entry x:Name="txtV1"></Entry>

            <Label
                Text="Digite o valor 2"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Entry x:Name="txtV2"></Entry>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">


                <Button
                        x:Name="adicaoBtn"
                        Margin="5"
                        Text="+" 
                        Clicked="OnAddClicked"
                        HorizontalOptions="Fill" 
                        WidthRequest="10"/>
                <Button
                    x:Name="SubtracaoBtn"
                    Margin="5"
                    Text="-" 
                    Clicked="OnSubClicked"
                    HorizontalOptions="Fill" 
                    WidthRequest="10"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button
                        x:Name="multiplicacaoBtn"
                        Margin="5"
                        Text="x" 
                        Clicked="OnMultClicked"
                        HorizontalOptions="Fill" 
                        WidthRequest="10"/>

                <Button
                        x:Name="divisaoBtn"
                        Margin="5"
                        Text="/" 
                        Clicked="OnDivClicked"
                        HorizontalOptions="Fill" 
                        WidthRequest="10"/>

            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
